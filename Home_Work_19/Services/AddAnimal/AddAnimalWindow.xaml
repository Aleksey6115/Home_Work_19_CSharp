<Window x:Class="Home_Work_19.Services.AddAnimal.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Work_19.Services.AddAnimal"
        mc:Ignorable="d"
        Title="AddAnimalWindow" Width="350" Height="125" WindowStartupLocation="CenterScreen"
        MinHeight="125" MinWidth="350"
        MaxHeight="125" MaxWidth="350">
    
    <Grid>

        <StackPanel>

            <TextBlock Grid.Row="0" Text="Укажите тип животного:" Margin="5"/>
            <ComboBox x:Name="animalCombo" Grid.Row="1" Margin="5"/>

            <WrapPanel Grid.Row="2" HorizontalAlignment="Right">
                <Button IsDefault="True" MinWidth="60" Margin="0,0,10,0" Click="Button_Click">OK</Button>
            </WrapPanel>

        </StackPanel>

    </Grid>
</Window>
